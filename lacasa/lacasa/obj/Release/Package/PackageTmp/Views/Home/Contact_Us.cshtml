            @Html.Raw(TempData["contact"])
            @using (Html.BeginForm("Contact_Us", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name" style="color: white;">
                                    Name
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    @Html.TextBox("fname", "", new { @class = "form-control textbx", id = "fname", required = "required" })
                                    @*<input type="text" class="form-control textbx" id="name" placeholder="Enter name" required="required" />*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" style="width: 120px; color: white;">
                                    Email Address
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    @Html.TextBox("email", "", new { @class = "form-control textbx", id = "email", required = "required", type = "email" })
                                    @*<input type="email" class="form-control textbx" id="email" placeholder="Enter email" required="required" />*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" style="width: 120px; color: white;">
                                    Phone Number
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-phone"></span>
                                    </span>
                                    @*<input class="singlebox" id="phone" maxlength="15" name="phone" pattern="[+0-9]{10,15}" required="required" type="tel" value="">*@
                                    @Html.TextBox("phno", "", new { @class = "form-control textbx", id = "Phone", required = "required", pattern = "[+0-9]{10,15}", maxlength = "15", type = "tel" })
                                    @*<input type="tel" class="form-control textbx" id="email" placeholder="Enter email" required="required" />*@
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name" style="color:white">
                                    Message
                                </label>
                                @Html.TextArea("mesg", "", new { @class = "form-control", id = "Message", required = "required", rows = "9", cols = "25" })
                                @*<textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required"
                                    placeholder="Message"></textarea>*@
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                Send 
                            </button> 
                        </div>

                    </div>
                </form>            }
        </div>

